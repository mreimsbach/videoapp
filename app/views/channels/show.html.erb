<%- model_class = Channel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<% if current_user %>
  <% if @channel.following?(current_user) %>
    <%= link_to "Unsubscribe", unfollow_path, class: "btn btn-danger pull-right"  %>
  <% else %>
    <%= link_to "Subscribe", follow_path, class: "btn btn-success pull-right"  %>
  <% end %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @channel.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @channel.description %></dd>
  <dd><%= pluralize(@channel.subscriber.count, "Subscriber") %> </dd>
</dl>
<h2>Courses</h2>
<% if @channel.courses.any? %>
  <%= render @courses %>
<% end %>
<%= will_paginate @courses %> <br\>
<%= link_to t('.back', :default => t("helpers.links.back")),
              channels_path, :class => 'btn btn-default'  %>
<% if channel_of_current_user?(@channel) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_channel_path(@channel), :class => 'btn btn-default' %>
    <%= link_to 'Add Course', new_channel_course_path(@channel), :class => 'btn btn-primary' %>
<% end %>
