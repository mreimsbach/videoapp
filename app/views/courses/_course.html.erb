<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to course.name, channel_course_path(course.channel, course) %>
    <% if current_user.channel == @channel %>
      <%= link_to 'Destroy', [course.channel, course], method: :delete, data: { confirm: 'Are you sure?'}, :class =>"btn btn-danger pull-right" %>
      <%= link_to 'Edit', edit_channel_course_path(course.channel, course), :class => "btn btn-info pull-right" %>
    <% end %>


  </div>
  <div class="panel-body">
    <%= course.description %>
    <% if course.videos.any? %>
      <%= render course.videos %>
    <% end %>
  </div>
</div>
