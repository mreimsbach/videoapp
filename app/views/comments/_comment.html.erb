<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-8">
        <h3 class="panel-title"><%= comment.author_name %></h3>
      </div>
      <div class="col-md-4">
        <% if !(current_user.nil?) && (comment.author == current_user) %>
          <%= link_to [comment.video, comment], method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger pull-right" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        <% end %>
      </div>  
    </div>
  </div>
  <div class="panel-body">
      <dd><%= comment.text %></dd>
  </div>
</div>
