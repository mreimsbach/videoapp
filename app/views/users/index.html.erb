<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, users_admin_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_users_admin_path(user), :class => 'btn btn-default btn-xs' %>
          <% if current_user != user %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      users_admin_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
